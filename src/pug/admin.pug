---
title: Admin - Dashboard
currentUrl: admin
---
extends layouts/layout
block header
  include partials/header-dashboard
  include partials/sidebar-admin
block content
  +main_dashboard()
    .d-flex.flex-column.gap-4
      .p-5.rounded.border
        .mb-4
          h4.mb-0 Open Perizinan
        .row.row-cols-4.g-3
          .col
            .text-decoration-none.p-4.bg-warning-subtle.rounded-3
              .mb-4
                .count-circle-box.text-white.bg-warning
                  span 8
              .d-flex.gap-1.justify-content-between.fw-semibold.text-body
                span Open
          .col
            .text-decoration-none.p-4.bg-success-subtle.rounded-3
              .mb-4
                .count-circle-box.text-white.bg-success
                  span 3
              .d-flex.gap-1.justify-content-between.fw-semibold.text-body
                span Closed
          .col
            .text-decoration-none.p-4.bg-info-subtle.rounded-3
              .mb-4
                .count-circle-box.text-white.bg-info
                  span 12
              .d-flex.gap-1.justify-content-between.fw-semibold.text-body
                span Dalam Proses
          .col
            .text-decoration-none.p-4.bg-danger-subtle.rounded-3
              .mb-4
                .count-circle-box.text-white.bg-danger
                  span 15
              .d-flex.gap-1.justify-content-between.fw-semibold.text-body
                span BAST / Selesai

      .p-4.border.rounded.bg-light
        .d-grid
          button.btn.justify-content-start.px-2.collapsed(type="button" data-bs-toggle="collapse" href="#order-baru" role="button" aria-expanded="false" aria-controls="order-baru")
            +bx('collapsed-icon')
            | Order Baru
        #order-baru.collapse.mt-2
          .d-flex.p-2.mt-2.align-items-center.text-warning.bg-warning-subtle.rounded
            .d-inline-flex.p-2
              +bx('bx-info-circle')
            span.subtitle Ada <strong>2</strong> Order Baru Belum Di-Approve
          .border.rounded.mt-2
            .rounded.py-1.bg-white
              table.table.table-no-bottom-border.mb-0
                thead.subtitle.align-middle
                  tr
                    td.px-4 No Order
                    td Perusahaan
                    td Tanggal Order
                    td.px-4
                tbody.body
                  tr
                    td.px-4 ORD23040003
                    td PT Pembangunan Sarana Jaya
                    td 2023-04-13, 12:00:00
                    td.px-4
                      a.btn.btn-sm.rounded-pill.btn-outline-primary
                        +bx("bx-show")
                        span Details
          .border.rounded.mt-2
            .rounded.py-1.bg-white
              table.table.table-no-bottom-border.mb-0
