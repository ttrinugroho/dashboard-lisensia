                        +bx("bx-show")
                        span Details
        .d-grid.mt-2
          button.btn.justify-content-start.px-2.collapsed(type="button" data-bs-toggle="collapse" href="#perizinan-terlambat" role="button" aria-expanded="false" aria-controls="perizinan-terlambat")
            +bx('collapsed-icon')
            span Order Baru
            span.badge.rounded-pill.bg-danger 8
        #perizinan-terlambat.collapse.mt-2
          .border.rounded.mt-2
            .rounded.py-1.bg-white
              table.table.table-no-bottom-border.mb-0
                thead.subtitle.align-middle
                  tr
                    td.px-4 No Order
                    td Perusahaan
                    td Tanggal Order
                    td.px-4
                tbody.body.align-middle
                  tr
                    td.px-4 ORD23040003
                    td PT Pembangunan Sarana Jaya
                    td 2023-04-13, 12:00:00
                    td.px-4
                      a.btn.btn-sm.rounded-pill.btn-outline-primary
                        +bx("bx-show")
                        span Details
          .border.rounded.mt-2
            .rounded.py-1.bg-white
