                      a.btn.btn-sm.rounded-pill.btn-outline-primary
                        +bx("bx-show")
                        span Details
      div
        .row.row-cols-2
          .col
            .d-flex.flex-column.gap-4
              .p-4.d-flex.gap-4.align-items-center.rounded.bg-light
