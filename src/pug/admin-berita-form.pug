---
title: Admin - Dashboard
header: Form Berita
---
extends layouts/layout
block header
  include partials/header-other
block content
  .container.pb-5.mb-6
    .p-5.mb-5
      .d-flex.flex-column.gap-4
        div
          label.form-label(for='judule') Judul Berita
          input#judule.form-control(type='text' placeholder="Judul Berita")
        div
          label.form-label(for='kategori') Pilih Kategori
          select#kategori.select.wide(name="kategori")
            option(value="") Pilih Kategori
            option(value="1") Kategori 1
            option(value="2") Kategori 2
            option(value="3") Kategori 3
            option(value="4") Kategori 4
        div
          label.form-label(for='isi') Isi Berita
          #editor
        div
          label.form-label(for='gambar') Upload Gambar
          +file_upload('gambar')
block modal
  +footer_back
    button.btn.btn-light.px-8(type="button") Cancel
    button.btn.btn-primary.ms-4.px-8(type="button") Save
